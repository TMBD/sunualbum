<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="sunualbum_pu" transaction-type="JTA">
		
		<!-- transaction-type = (RESOURCE_LOCAL | JTA) -->
    
    	<!-- Définition optionnelle du framework ORM utilisé (ici, EclipseLink) -->
    	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    	<jta-data-source>jdbc/sunualbum_ds</jta-data-source>
    	<!-- <non-jta-data-source>jdbc/guest_jpa_DS</non-jta-data-source> -->
    	<!-- Pour la découverte automatique des classes d'Entité
    		Permet de ne pas utiliser une succession de <class> pour énumérer les classes des entités gérées par ce P.U
    	-->
        <!--  <exclude-unlisted-classes>false</exclude-unlisted-classes> -->
       <class>beans.persistent.Personne</class>
       <class>beans.persistent.Utilisateur</class>
       <class>beans.persistent.Album</class>
       <class>beans.persistent.Photo</class>
       <properties>
 			<!-- Pour la définition du niveau de Logging. Peut prendre les valeurs :
 				OFF, SEVERE, WARNING, INFO, CONFIG, FINE, FINER, FINEST, ALL
 			-->
			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.level.sql" value="FINE"/>
			
			<!-- Pour la génération des tables à partir des entités
				"create-tables" ==> Crée les tables si elles n'existent pas
				"drop-and-create-tables" ==> Supprime puis crée les tables
			-->
           <property name="eclipselink.ddl-generation" value="create-tables"/>
           <!-- <property name="eclipselink.target-database" value="Auto"/> -->
        </properties>

	</persistence-unit>
</persistence>
